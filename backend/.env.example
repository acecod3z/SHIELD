AI_MODEL_TIMEOUT=30

# Phase 2: Honeypot Configuration (Future)  
HONEYPOT_ENABLED=false
HONEYPOT_SESSION_TIMEOUT=1800
HONEYPOT_LOG_PATH=./logs/honeypot/

