# Application Settings
DEBUG=true
HOST=127.0.0.1
PORT=8000

# Security
SECRET_KEY=shield-development-key-change-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=shield.log

# Phase 1: AI Model Configuration (Future)
